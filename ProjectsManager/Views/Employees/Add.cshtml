@model ProjectsManager.Application.DTO.ProjectsDto

@{
    ViewData["Title"] = "Добавление нового проекта";
}

<!-- Заголовок страницы -->
<h1 class="text-center mb-4">Добавление нового проекта</h1>
<hr />

<!-- Контейнер для формы -->
<div class="container p-4 rounded shadow bg-light">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Add" method="post">
                <!-- Сводка ошибок валидации -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Группа форм для названия проекта -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Название проекта</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Группа форм для заказчика -->
                <div class="form-group mb-3">
                    <label asp-for="CustomerName" class="control-label">Заказчик</label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <!-- Группа форм для исполнителя -->
                <div class="form-group mb-3">
                    <label asp-for="ExecutorName" class="control-label">Исполнитель</label>
                    <input asp-for="ExecutorName" class="form-control" />
                    <span asp-validation-for="ExecutorName" class="text-danger"></span>
                </div>

                <!-- Группа форм для даты начала -->
                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="control-label">Дата начала</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- Группа форм для даты окончания -->
                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="control-label">Дата окончания</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Группа форм для приоритета проекта -->
                <div class="form-group mb-3">
                    <label asp-for="Priority" class="control-label">Приоритет</label>
                    <input asp-for="Priority" type="number" min="1" max="5" class="form-control" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <!-- Кнопки -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a class="btn btn-danger ml-2" asp-action="AllProjects" asp-controller="Projects">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>


