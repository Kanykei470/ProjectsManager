@model ProjectsManager.Application.DTO.ProjectsDto

@{
    ViewData["Title"] = "Добавление";
}

<div class="container">
    <h1 class="text-center my-4">Добавление нового проекта</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Add" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Название проекта</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="CustomerName" class="form-label">Заказчик</label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ExecutorName" class="form-label">Исполнитель</label>
                    <input asp-for="ExecutorName" class="form-control" />
                    <span asp-validation-for="ExecutorName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="StartDate" class="form-label">Дата начала</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="EndDate" class="form-label">Дата окончания</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Priority" class="form-label">Приоритет проекта</label>
                    <input asp-for="Priority" type="number" class="form-control" min="1" max="5" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary" asp-action="AllProjects" asp-controller="Projects">Назад</a>
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
